@model MabaCore.Data.ViewModels.VMUser

@{
    ViewData["Title"] = "Index";
}

<hr />
<div class="row">
    <div class="col-sm-10">
        <h1>Profile</h1>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-3">
        <!-- left col -->

        <div class="text-center">
            <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png"
                 class="avatar rounded-circle img-thumbnail" alt="avatar" />
            <h6>Upload a different photo...</h6>
            <input type="file" class="text-center center-block file-upload" />
        </div>
        <br />
    </div>
    <!-- /col-3 -->
    <div class="col-sm-9">
        <form class="form" asp-action="Edit">
            <div class="form-group">
                <div class="col-xs-6">
                    <label asp-for="FirstName">
                        <h4>First name</h4>
                    </label>
                    <input type="text" class="form-control" placeholder="First Name" asp-for="FirstName" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-6">
                    <label asp-for="LastName">
                        <h4>Last name</h4>
                    </label>
                    <input type="text" class="form-control" placeholder="Last Name" asp-for="LastName" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-6">
                    <label asp-for="Phone">
                        <h4>Phone</h4>
                    </label>
                    <input type="text" class="form-control" placeholder="Phone" asp-for="Phone" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-6">
                    <label asp-for="Email">
                        <h4>Email</h4>
                    </label>
                    <input type="text" class="form-control" placeholder="Email" asp-for="Email" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-6">
                    <label asp-for="Location">
                        <h4>Location</h4>
                    </label>
                    <input type="text" class="form-control" placeholder="First Name" asp-for="Location" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    <br />
                    <button class="btn btn-lg btn-success  d-flex" type="submit">
                        <i class="material-icons mr-1"> save </i> Save
                    </button>
                </div>
            </div>
        </form>

        <hr />
    </div>
    <!-- /tab-content -->
</div>
